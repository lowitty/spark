<%= render "layouts/header"%>
<% if logged_in? %>
<% provide(:title, current_user.username) %>
<aside class="col-md-4">
	<section class="user_info">
		<%= image_tag current_user.avatar_url("thumb") %>
		<h1><%= current_user.username %> </h1>
	</section>
</aside>
<% end%>

